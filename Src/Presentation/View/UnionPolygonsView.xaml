<UserControl x:Class="EAABAddIn.Src.Presentation.View.UnionPolygonsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="400">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            
            <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Margin" Value="0,0,0,10"/>
            </Style>
            
            <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Margin" Value="0,10,0,5"/>
            </Style>

            <Style x:Key="LabelTextStyle" TargetType="TextBlock">
                <Setter Property="Margin" Value="0,5,0,2"/>
                <Setter Property="FontSize" Value="11"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{DynamicResource Esri_BackgroundPressedBrush}" Padding="15">
            <StackPanel>
                <TextBlock Text="Unir Polígonos" Style="{StaticResource HeaderTextStyle}" 
                           Foreground="{DynamicResource Esri_TextControlBrush}"/>
                <TextBlock Text="Une múltiples polígonos seleccionados en uno solo y los guarda en una nueva feature class" 
                           FontSize="11" 
                           Foreground="{DynamicResource Esri_TextControlBrush}"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="15">
            <StackPanel>
                
                <!-- Información de Selección -->
                <Border BorderBrush="{DynamicResource Esri_BorderBrush}" 
                        BorderThickness="1" 
                        Padding="10" 
                        Margin="0,0,0,15"
                        Background="{DynamicResource Esri_BackgroundHoverBrush}">
                    <StackPanel>
                        <TextBlock Text="Selección Actual" Style="{StaticResource SectionHeaderStyle}"/>
                        
                        <Grid Margin="0,5,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" 
                                       Text="Polígonos seleccionados:" 
                                       Margin="0,0,10,0"
                                       VerticalAlignment="Center"/>
                            
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding SelectedFeaturesCount}" 
                                       FontWeight="Bold"
                                       FontSize="18"
                                       Foreground="{DynamicResource Esri_BlueTextBrush}"
                                       VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Lista de polígonos seleccionados -->
                        <ListBox ItemsSource="{Binding SelectedFeatures}"
                                 MaxHeight="100"
                                 Margin="0,0,0,10"
                                 Background="{DynamicResource Esri_BackgroundPressedBrush}"
                                 BorderBrush="{DynamicResource Esri_BorderBrush}"
                                 BorderThickness="1">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="5,2"/>
                                    <Setter Property="FontSize" Value="10"/>
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>

                        <Button Content="🔄 Actualizar Selección" 
                                Command="{Binding RefreshSelectionCommand}"
                                Padding="10,5"
                                HorizontalAlignment="Stretch"
                                Style="{DynamicResource Esri_Button}"/>
                    </StackPanel>
                </Border>

                <!-- Configuración de Workspace -->
                <TextBlock Text="1. Workspace (Geodatabase)" Style="{StaticResource SectionHeaderStyle}"/>
                
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" 
                             Text="{Binding Workspace, Mode=TwoWay}"
                             IsReadOnly="True"
                             Padding="5"
                             VerticalContentAlignment="Center"
                             Style="{DynamicResource Esri_TextBox}"/>
                    
                    <Button Grid.Column="1" 
                            Content="📁" 
                            Command="{Binding WorkspaceCommand}"
                            Width="35"
                            Margin="5,0,0,0"
                            ToolTip="Seleccionar geodatabase"
                            Style="{DynamicResource Esri_Button}"/>
                </Grid>

                <!-- Feature Class Origen -->
                <TextBlock Text="2. Feature Class Origen (Polígonos)" Style="{StaticResource SectionHeaderStyle}"/>
                
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" 
                             Text="{Binding FeatureClass, Mode=TwoWay}"
                             IsReadOnly="True"
                             Padding="5"
                             VerticalContentAlignment="Center"
                             Style="{DynamicResource Esri_TextBox}"/>
                    
                    <Button Grid.Column="1" 
                            Content="📁" 
                            Command="{Binding FeatureClassCommand}"
                            Width="35"
                            Margin="5,0,0,0"
                            ToolTip="Seleccionar feature class origen"
                            Style="{DynamicResource Esri_Button}"/>
                </Grid>

                <!-- Campo para concatenar -->
                <TextBlock Text="Campo identificador:" Style="{StaticResource LabelTextStyle}"/>
                <ComboBox ItemsSource="{Binding FeatureClassFields}"
                          SelectedItem="{Binding SelectedFeatureClassField, Mode=TwoWay}"
                          IsEnabled="{Binding IsFeatureClassSelected}"
                          Padding="5"
                          Margin="0,0,0,10"
                          Style="{DynamicResource Esri_ComboBox}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="11"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Identificador manual -->
                <TextBlock Text="Identificador para el polígono unido:" Style="{StaticResource LabelTextStyle}"/>
                <TextBox Text="{Binding IdentifierText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Padding="5"
                         Margin="0,0,0,15"
                         ToolTip="Ingrese un nombre único para identificar el polígono unido" 
                         Style="{DynamicResource Esri_TextBox}"/>

                <!-- Información -->
                <Border BorderBrush="{DynamicResource Esri_Blue}" 
                        BorderThickness="1" 
                        Padding="10"
                        Background="{DynamicResource Esri_BackgroundHoverBrush}">
                    <StackPanel>
                        <TextBlock Text="ℹ️ Información" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,5"
                                   Foreground="{DynamicResource Esri_Blue}"/>
                        
                        <TextBlock TextWrapping="Wrap" FontSize="11" LineHeight="16">
                            <Run Text="• Seleccione al menos 2 polígonos en el mapa"/>
                            <LineBreak/>
                            <Run Text="• Configure el workspace y feature class origen"/>
                            <LineBreak/>
                            <Run Text="• Seleccione el campo identificador y asigne un nombre"/>
                            <LineBreak/>
                            <Run Text="• Haga clic en 'Construir Polígono' para crear la unión"/>
                            <LineBreak/><LineBreak/>
                            <Run Text="Se creará una nueva feature class con el polígono unido y todos sus atributos combinados." FontStyle="Italic"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer with Actions -->
        <Border Grid.Row="2" 
                BorderBrush="{DynamicResource Esri_BorderBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="15"
                Background="{DynamicResource Esri_BackgroundHoverBrush}">
            <StackPanel>
                
                <!-- Status Message -->
                <TextBlock Text="{Binding StatusMessage}" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"
                           FontSize="11"
                           FontWeight="Medium"
                           Foreground="{DynamicResource Esri_TextControlBrush}"/>

                <!-- Action Buttons -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="🔷 Construir Polígono" 
                            Command="{Binding RunCommand}"
                            IsEnabled="{Binding CanBuildPolygons}"
                            Height="35"
                            Margin="0,0,5,0"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Style="{DynamicResource Esri_Button}"/>

                    <Button Grid.Column="1"
                            Content="🗑️ Limpiar"
                            Command="{Binding ClearFormCommand}"
                            Height="35"
                            Width="80"
                            FontSize="12"
                            Style="{DynamicResource Esri_Button}"/>
                </Grid>

                <!-- Progress Indicator -->
                <ProgressBar IsIndeterminate="True" 
                             Height="4"
                             Margin="0,10,0,0"
                             Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
            </StackPanel>
        </Border>
    </Grid>
</UserControl>