<UserControl
    x:Class="EAABAddIn.Src.Presentation.View.AddressSearchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EAABAddIn.Src.Presentation.View"
    xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
    mc:Ignorable="d"
    d:DesignHeight="800" d:DesignWidth="450"
>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary Source="pack://application:,,,/ArcGIS.Desktop.Framework;component\Themes\Default.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock
                Text="Seleccione ciudad:"
                Margin="0 0 0 2"
                VerticalAlignment="Center"
                Style="{DynamicResource Esri_TextBlockH3}"
            />

            <ComboBox
                x:Name="CityComboBox"
                Margin="0 0 0 5"
                ItemsSource="{Binding Cities}"
                SelectedItem="{Binding SelectedCity}"
                DisplayMemberPath="CityDesc"
                SelectedValuePath="CityCode"
            />

            <TextBlock
                Text="Ingrese direcciÃ³n:"
                Margin="0 0 0 2"
                VerticalAlignment="Center"
                Style="{DynamicResource Esri_TextBlockH3}"
            />
            
            <TextBox
                x:Name="InputBox"
                Margin="0 0 0 5"
                Text="{Binding AddressInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button
                x:Name="SearchButton"
                Content="Buscar"
                Margin="5 0 0 0"
                Style="{DynamicResource Esri_Button}"
                Command="{Binding SearchCommand}"
            />
        </StackPanel>
    </Grid>
</UserControl>