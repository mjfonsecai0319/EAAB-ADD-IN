<UserControl x:Class="EAABAddIn.Src.Presentation.View.PropertyPage1View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:EAABAddIn.Src.Presentation.ViewModel"
             xmlns:conv="clr-namespace:EAABAddIn.Src.Presentation.Converters"
             xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
             mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary 
                    Source="pack://application:,,,/ArcGIS.Desktop.Framework;component/Themes/Default.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <!-- Estilos generales (no modificados) -->
            <Style x:Key="MainContainerStyle" TargetType="Grid">
                <Setter Property="Background" Value="{DynamicResource Esri_BackgroundContentBrush}"/>
            </Style>

            <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource Esri_TextPrimaryBrush}"/>
                <Setter Property="Margin" Value="0,0,0,15"/>
            </Style>

            <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
                <Setter Property="Width" Value="120"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="Foreground" Value="{DynamicResource Esri_TextPrimaryBrush}"/>
                <Setter Property="FontSize" Value="13"/>
            </Style>

            <Style x:Key="BaseInputStyle">
                <Setter Property="FrameworkElement.Width" Value="220"/>
                <Setter Property="FrameworkElement.Height" Value="28"/>
                <Setter Property="FrameworkElement.Margin" Value="0,0,0,12"/>
            </Style>

            <Style x:Key="ThemedTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource BaseInputStyle}">
                <Setter Property="Background" Value="{DynamicResource Esri_BackgroundContentBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource Esri_TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Esri_BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="FontSize" Value="13"/>
                <Style.Triggers>
                    <Trigger Property="IsFocused" Value="True">
                        <Setter Property="BorderBrush" Value="{DynamicResource Esri_Blue}"/>
                        <Setter Property="BorderThickness" Value="2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ThemedComboBoxStyle" TargetType="ComboBox" BasedOn="{StaticResource BaseInputStyle}">
                <Setter Property="Background" Value="{DynamicResource Esri_BackgroundContentBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource Esri_TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Esri_BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="FontSize" Value="13"/>
            </Style>

            <Style x:Key="ThemedPasswordBoxStyle" TargetType="PasswordBox" BasedOn="{StaticResource BaseInputStyle}">
                <Setter Property="Background" Value="{DynamicResource Esri_BackgroundContentBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource Esri_TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Esri_BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="FontSize" Value="13"/>
                <Style.Triggers>
                    <Trigger Property="IsFocused" Value="True">
                        <Setter Property="BorderBrush" Value="{DynamicResource Esri_Blue}"/>
                        <Setter Property="BorderThickness" Value="2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{DynamicResource Esri_Blue}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Height" Value="32"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource Esri_BlueHover}"/>
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="Background" Value="{DynamicResource Esri_BluePressed}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="SecondaryButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{DynamicResource Esri_BackgroundHoverBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource Esri_TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Esri_BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Height" Value="32"/>
                <Setter Property="Padding" Value="16,8"/>
                <Setter Property="FontWeight" Value="Medium"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource Esri_BackgroundPressedBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="FilePickerButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="{DynamicResource Esri_BackgroundHoverBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource Esri_TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Esri_BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Height" Value="28"/>
                <Setter Property="Width" Value="32"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Content" Value="..."/>
                <Setter Property="Margin" Value="5,0,0,12"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource Esri_BackgroundPressedBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="FilePathTextBoxStyle" TargetType="TextBox">
                <Setter Property="Background" Value="{DynamicResource Esri_BackgroundContentBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource Esri_TextPrimaryBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Esri_BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Height" Value="28"/>
                <Setter Property="Padding" Value="8,4"/>
                <Setter Property="FontSize" Value="13"/>
                <Setter Property="Margin" Value="0,0,0,12"/>
                <Setter Property="Width" Value="185"/>
                <Setter Property="IsReadOnly" Value="True"/>
                <Style.Triggers>
                    <Trigger Property="IsFocused" Value="True">
                        <Setter Property="BorderBrush" Value="{DynamicResource Esri_Blue}"/>
                        <Setter Property="BorderThickness" Value="2"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="StatusContainerStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource Esri_BackgroundHoverBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Esri_BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="4"/>
                <Setter Property="Padding" Value="12"/>
                <Setter Property="Margin" Value="0,15,0,0"/>
            </Style>

            <Style x:Key="InstructionsContainerStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource Esri_BackgroundHoverBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource Esri_Blue}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="4"/>
                <Setter Property="Padding" Value="15"/>
                <Setter Property="Margin" Value="0,20,0,0"/>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:PropertyPage1ViewModel/>
    </UserControl.DataContext>

    <Grid Style="{StaticResource MainContainerStyle}" Margin="25">
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel>
                <TextBlock Text="Configuración de Base de Datos" Style="{StaticResource SectionHeaderStyle}"/>

                <Grid Margin="0,20,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <!-- Etiquetas -->
                        <ColumnDefinition Width="*"/>
                        <!-- Inputs -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Botón archivo -->
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Motor -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Motor:" Style="{StaticResource FieldLabelStyle}"/>
                    <ComboBox Grid.Row="0" Grid.Column="1"
                              Style="{StaticResource ThemedComboBoxStyle}"
                              ItemsSource="{Binding MotoresBD}"
                              SelectedItem="{Binding MotorSeleccionado, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Host -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Host:" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Grid.Row="1" Grid.Column="1"
                             Style="{StaticResource ThemedTextBoxStyle}"
                             Text="{Binding Host, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Puerto -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Puerto:" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Grid.Row="2" Grid.Column="1"
                             Style="{StaticResource ThemedTextBoxStyle}"
                             Text="{Binding Puerto, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Base de Datos -->
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Base de Datos:" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Grid.Row="3" Grid.Column="1"
                             Style="{StaticResource ThemedTextBoxStyle}"
                             Text="{Binding BaseDeDatos, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Usuario -->
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Usuario:" Style="{StaticResource FieldLabelStyle}"/>
                    <TextBox Grid.Row="4" Grid.Column="1"
                             Style="{StaticResource ThemedTextBoxStyle}"
                             Text="{Binding Usuario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <!-- Contraseña -->
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Contraseña:" Style="{StaticResource FieldLabelStyle}"/>
                    <PasswordBox Grid.Row="5" Grid.Column="1"
                                 Style="{StaticResource ThemedPasswordBoxStyle}"
                                 x:Name="PasswordBox"
                                 PasswordChanged="PasswordBox_PasswordChanged"/>

                    <!-- Archivo GDB -->
                    <TextBlock Grid.Row="6" Grid.Column="0" 
                               Text="Archivo GDB:" 
                               Style="{StaticResource FieldLabelStyle}"/>

                    <TextBox Grid.Row="6" Grid.Column="1"
                             Style="{StaticResource FilePathTextBoxStyle}"
                             Text="{Binding RutaArchivoGdb, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="{Binding RutaArchivoGdb}" Margin="56,0,91,12"/>

                    <Button Grid.Row="6" Grid.Column="1"
                            Style="{StaticResource FilePickerButtonStyle}"
                            Command="{Binding SeleccionarArchivoGdbCommand}"
                            ToolTip="Seleccionar archivo GDB" Margin="266,1,34,11" RenderTransformOrigin="-0.225,0.404" Click="Button_Click"/>
                </Grid>

                <!-- Botones -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                    <Button Content="Probar Conexión"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Margin="0,0,10,0"
                            Command="{Binding ProbarConexionCommand}"/>

                    <Button Content="Guardar y Conectar"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding GuardarYReconectarCommand}"/>
                </StackPanel>

                <!-- Mensaje de estado -->
                <Border Style="{StaticResource StatusContainerStyle}">
                    <TextBlock Text="{Binding MensajeConexion}"
                               FontWeight="Medium"
                               Foreground="{DynamicResource Esri_TextPrimaryBrush}"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Instrucciones -->
                <Border Style="{StaticResource InstructionsContainerStyle}">
                    <StackPanel>
                        <TextBlock Text="Instrucciones:" 
                                   FontWeight="Bold" 
                                   FontSize="14"
                                   Foreground="{DynamicResource Esri_Blue}"
                                   Margin="0,0,0,8"/>
                        <TextBlock TextWrapping="Wrap" 
                                   LineHeight="20"
                                   Foreground="{DynamicResource Esri_TextPrimaryBrush}">
                            <Run Text="1. Configure todos los parámetros de conexión"/>
                            <LineBreak/>
                            <Run Text="2. Seleccione el archivo GDB haciendo clic en el botón '...' (Opcional)"/>
                            <LineBreak/>
                            <Run Text="3. Haga clic en "/>
                            <Run Text="'Probar Conexión'" FontWeight="Medium"/>
                            <Run Text=" para verificar"/>
                            <LineBreak/>
                            <Run Text="4. Si la prueba es exitosa, haga clic en "/>
                            <Run Text="'Guardar y Conectar'" FontWeight="Medium"/>
                            <LineBreak/>
                            <Run Text="5. La configuración se guardará automáticamente para futuras sesiones"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
