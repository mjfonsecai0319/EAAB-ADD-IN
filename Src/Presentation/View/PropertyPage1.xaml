<UserControl x:Class="EAABAddIn.PropertyPage1View"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            xmlns:ui="clr-namespace:EAABAddIn"
            xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
            xmlns:conv="clr-namespace:EAABAddIn.Data"
            mc:Ignorable="d" 
            d:DesignHeight="400" d:DesignWidth="450"
            d:DataContext="{Binding Path=ui.PropertyPage1ViewModel}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <extensions:DesignOnlyResourceDictionary 
                    Source="pack://application:,,,/ArcGIS.Desktop.Framework;component/Themes/Default.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <conv:OracleVisibilityConverter x:Key="OracleVisibilityConverter"/>
            </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="15" Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="Auto"/> 
        </Grid.ColumnDefinitions>

        <TextBlock 
            Text="Configuración de Base de Datos"
            Style="{DynamicResource Esri_TextBlockH3}"
            Margin="0,0,0,15"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"/>

        <TextBlock Text="Motor:" 
            Style="{DynamicResource Esri_TextBlockRegular}" 
            VerticalAlignment="Center"
            Grid.Row="1" Grid.Column="0"/>
        <ComboBox Name="cmbDatabase"
          Style="{DynamicResource Esri_ComboBox}"
          Grid.Row="1" Grid.Column="2"
          Height="28" Margin="0,0,0,10"
          ItemsSource="{Binding MotoresBD}"   
          SelectedItem="{Binding MotorSeleccionado, Mode=TwoWay}"/>

<Button x:Name="btnBrowseOracle"
        Content="..."
        Width="30"
        Height="25"
        Margin="5,0,0,0"
        Style="{DynamicResource Esri_Button}"
        Grid.Row="1"
        Grid.Column="3" 
        Command="{Binding BrowseOracleCommand}"
        Visibility="{Binding MotorSeleccionado, Converter={StaticResource OracleVisibilityConverter}}"/>

        <TextBlock Text="User:" 
                   Style="{DynamicResource Esri_TextBlockRegular}" 
                   VerticalAlignment="Center"
                   Grid.Row="3" Grid.Column="0"/>
        <TextBox Style="{DynamicResource Esri_TextBox}"
                 Grid.Row="3" Grid.Column="2"
                 MinWidth="200" Height="28"
                 Margin="0,0,0,10"
                 Text="{Binding Usuario, Mode=TwoWay}"/>

        <TextBlock Text="Password:" 
                   Style="{DynamicResource Esri_TextBlockRegular}" 
                   VerticalAlignment="Center"
                   Grid.Row="4" Grid.Column="0"/>
        <PasswordBox Style="{DynamicResource Esri_TextBox}"
                     Grid.Row="4" Grid.Column="2"
                     Height="28" Margin="0,0,0,10"
                     PasswordChar="*"
                     PasswordChanged="PasswordBox_PasswordChanged"/>

        <TextBlock Text="Host:" 
                   Style="{DynamicResource Esri_TextBlockRegular}" 
                   VerticalAlignment="Center"
                   Grid.Row="5" Grid.Column="0"/>
        <TextBox Style="{DynamicResource Esri_TextBox}"
                 Grid.Row="5" Grid.Column="2"
                 Height="28" Margin="0,0,0,10"
                 Text="{Binding Host, Mode=TwoWay}"/>

        <TextBlock Text="Port:" 
                   Style="{DynamicResource Esri_TextBlockRegular}" 
                   VerticalAlignment="Center"
                   Grid.Row="6" Grid.Column="0"/>
        <TextBox Style="{DynamicResource Esri_TextBox}"
                 Grid.Row="6" Grid.Column="2"
                 Height="28" Margin="0,0,0,15"
                 Text="{Binding Puerto, Mode=TwoWay}"/>

        <Button Content="Probar conexión"
                Style="{DynamicResource Esri_Button}"
                Grid.Row="7" Grid.Column="2"
                Width="200" Height="32"
                Margin="0,10,0,0"
                Command="{Binding TestConnectionCommand}" />
    </Grid>
</UserControl>
