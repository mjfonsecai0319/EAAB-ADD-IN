<UserControl
    x:Class="EAABAddIn.Src.Presentation.View.ClipFeatureDatasetView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:extensions="clr-namespace:ArcGIS.Desktop.Extensions;assembly=ArcGIS.Desktop.Extensions"
    xmlns:conv="clr-namespace:EAABAddIn.Src.Presentation.Converters"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="450">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Keep ArcGIS theme resources -->
                <extensions:DesignOnlyResourceDictionary
                    Source="pack://application:,,,/ArcGIS.Desktop.Framework;component/Themes/Default.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <conv:InverseBooleanConverter x:Key="InverseBooleanConverter" />

            <!-- Core styles (centralizados y coherentes) -->
            <Style x:Key="HeaderTextStyle" TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                <Setter Property="FontWeight" Value="SemiBold" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="Foreground" Value="{DynamicResource Esri_TextPrimaryBrush}" />
                <Setter Property="Margin" Value="0,0,0,6" />
            </Style>

            <Style x:Key="BodyTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="11" />
                <Setter Property="Foreground" Value="{DynamicResource Esri_TextPrimaryBrush}" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>

            <Style x:Key="DisabledTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="11" />
                <Setter Property="Foreground" Value="{DynamicResource Esri_TextDisabledBrush}" />
                <Setter Property="TextWrapping" Value="Wrap" />
            </Style>

            <Style x:Key="BrowseButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Background" Value="{DynamicResource Esri_BackgroundHoverBrush}" />
                <Setter Property="Foreground" Value="{DynamicResource Esri_TextStyleEmphasisBrush}" />
                <Setter Property="BorderBrush" Value="{DynamicResource Esri_BorderBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Height" Value="28" />
                <Setter Property="Width" Value="28" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource Esri_BackgroundPressedBrush}" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource Esri_Button}">
                <Setter Property="Background" Value="{DynamicResource Esri_Blue}" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Height" Value="32" />
                <Setter Property="Padding" Value="16,6" />
                <Setter Property="FontWeight" Value="Medium" />
                <Setter Property="Cursor" Value="Hand" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource Esri_BlueHover}" />
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="Background" Value="{DynamicResource Esri_Gray155}" />
                        <Setter Property="Foreground" Value="{DynamicResource Esri_Gray120}" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Foreground" Value="{DynamicResource Esri_Blue}" />
                <Setter Property="BorderBrush" Value="{DynamicResource Esri_Blue}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Height" Value="32" />
                <Setter Property="Padding" Value="12,6" />
                <Setter Property="FontWeight" Value="Medium" />
                <Setter Property="Cursor" Value="Hand" />
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource Esri_BackgroundHoverBrush}" />
                    </Trigger>
                    <Trigger Property="IsEnabled" Value="False">
                        <Setter Property="BorderBrush" Value="{DynamicResource Esri_Gray155}" />
                        <Setter Property="Foreground" Value="{DynamicResource Esri_Gray120}" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="ThemedTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                <Setter Property="Background" Value="{DynamicResource Esri_BackgroundContentBrush}" />
                <Setter Property="Foreground" Value="{DynamicResource Esri_TextPrimaryBrush}" />
                <Setter Property="BorderBrush" Value="{DynamicResource Esri_BorderBrush}" />
                <Setter Property="Height" Value="28" />
                <Setter Property="Padding" Value="8,4" />
            </Style>

            <Style x:Key="ThemedNumberBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ThemedTextBoxStyle}">
                <Setter Property="Margin" Value="0,0,0,12" />
            </Style>

            <!-- Small utility style for section containers -->
            <Style x:Key="SectionBorderStyle" TargetType="Border">
                <Setter Property="BorderBrush" Value="{DynamicResource Esri_BorderBrush}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="CornerRadius" Value="6" />
                <Setter Property="Background" Value="{DynamicResource Esri_BackgroundHoverBrush}" />
                <Setter Property="Padding" Value="10" />
                <Setter Property="Margin" Value="0,10,0,10" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- Root scroll area -->
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="0">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Main content column -->
            <StackPanel Grid.Row="0" Orientation="Vertical">
                <!-- Workspace -->
                <TextBlock Text="Workspace *" Style="{StaticResource HeaderTextStyle}" />
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        Grid.Column="0"
                        Text="{Binding OutputGeodatabase, Mode=OneWay}"
                        IsReadOnly="True"
                        Style="{StaticResource ThemedTextBoxStyle}" />

                    <Button
                        Grid.Column="2"
                        Style="{StaticResource BrowseButtonStyle}"
                        Command="{Binding OutputGeodatabaseCommand}">
                        <Image Width="16" Height="16" Source="pack://application:,,,/EAABAddIn;component/Images/FolderIcon16.png" />
                    </Button>
                </Grid>

                <!-- Feature Dataset origen -->
                <TextBlock Text="Feature Dataset de origen *" Style="{StaticResource HeaderTextStyle}" Margin="0,6,0,0" />
                <TextBlock Text="Selecciona una Geodatabase (.gdb) que contenga las redes"
                           Style="{StaticResource DisabledTextStyle}"
                           Margin="0,0,0,8" />

                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        Grid.Column="0"
                        Text="{Binding FeatureDataset, Mode=OneWay}"
                        IsReadOnly="True"
                        Style="{StaticResource ThemedTextBoxStyle}" />

                    <Button
                        Grid.Column="2"
                        Style="{StaticResource BrowseButtonStyle}"
                        Command="{Binding FeatureDatasetCommand}">
                        <Image Width="16" Height="16" Source="pack://application:,,,/EAABAddIn;component/Images/FolderIcon16.png" />
                    </Button>
                </Grid>

                <!-- SelecciÃ³n y estado -->
                <TextBlock Text="SelecciÃ³n" Style="{StaticResource HeaderTextStyle}" Margin="0,12,0,8" />
                <TextBlock Text="PolÃ­gono de referencia" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,6" />
                <TextBlock Text="{Binding SelectionStatus}" Style="{StaticResource DisabledTextStyle}" Margin="0,0,0,12" />

                <!-- ===== Buffer Section (modernizado) ===== -->
                <StackPanel Margin="0,6,0,0">
                    <CheckBox
                        x:Name="EnableBufferCheck"
                        IsChecked="{Binding IsBufferEnabled, Mode=TwoWay}"
                        Margin="0,0,0,8">
                        <TextBlock Text="Habilitar Buffer" FontSize="14" FontWeight="SemiBold" />
                    </CheckBox>

                    <StackPanel Visibility="{Binding IsBufferEnabled, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Buffer (metros)" Style="{StaticResource HeaderTextStyle}" Margin="0,0,0,4" />

                        <TextBlock Text="Ingrese 0 para usar el polÃ­gono sin expansiÃ³n."
                                   Style="{StaticResource DisabledTextStyle}"
                                   Margin="0,0,0,8" />

                        <TextBox
                            Text="{Binding BufferMeters, UpdateSourceTrigger=PropertyChanged}"
                            Style="{StaticResource ThemedNumberBoxStyle}"
                            IsEnabled="{Binding IsBufferEnabled}" />

                        <CheckBox
                            x:Name="FlatBufferCheck"
                            IsChecked="{Binding IsFlatBufferEnabled, Mode=TwoWay}"
                            Margin="0,0,0,8"
                            IsEnabled="{Binding IsBufferEnabled}">
                            <TextBlock Text="Usar puntas rectas (aprox.)" FontSize="12" />
                            <CheckBox.ToolTip>
                                <TextBlock TextWrapping="Wrap" MaxWidth="320">
                                    <Run Text="Activado: " FontWeight="Bold"/>
                                    <Run Text="Genera puntas mÃ¡s rectas (APROXIMACIÃ“N). Puede alterar ligeramente la geometrÃ­a fuera del buffer exacto."/>
                                    <LineBreak/>
                                    <LineBreak/>
                                    <Run Text="Desactivado (Recomendado): " FontWeight="Bold"/>
                                    <Run Text="Buffer con puntas redondeadas - resultado exacto y mÃ¡s consistente."/>
                                </TextBlock>
                            </CheckBox.ToolTip>
                        </CheckBox>

                        <Border Style="{StaticResource SectionBorderStyle}">
                            <TextBlock Style="{StaticResource DisabledTextStyle}" FontSize="11" TextWrapping="Wrap">
                                <Run Text="Nota: " FontWeight="Bold"/>
                                <Run Text="Por defecto, el buffer aplica puntas redondeadas (exacto). La opciÃ³n de puntas rectas es una aproximaciÃ³n y puede alterar ligeramente la geometrÃ­a."/>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </StackPanel>
                <!-- ===== end buffer ===== -->

                <!-- ===== Feature Classes selection ===== -->
                <Border Style="{StaticResource SectionBorderStyle}" Visibility="{Binding HasFeatureClasses, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Feature Classes para Clip" Style="{StaticResource HeaderTextStyle}" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1" Style="{StaticResource BodyTextStyle}" VerticalAlignment="Center" Margin="12,0,0,0">
                                <Run Text="Seleccionadas: "/>
                                <Run Text="{Binding SelectedFeatureClassesCount, Mode=OneWay}" FontWeight="Bold"/>
                                <Run Text=" / "/>
                                <Run Text="{Binding FilteredFeatureClassesCount, Mode=OneWay}"/>
                            </TextBlock>
                        </Grid>

                        <!-- Search bar -->
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBox
                                Grid.Column="0"
                                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource ThemedTextBoxStyle}"
                                Height="28"
                                VerticalContentAlignment="Center">
                                <TextBox.Resources>
                                    <!-- Placeholder visual using VisualBrush when Text == empty -->
                                    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource ThemedTextBoxStyle}">
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Left">
                                                            <VisualBrush.Visual>
                                                                <TextBlock
                                                                    Text="ðŸ” Buscar Feature Classes..."
                                                                    Foreground="{DynamicResource Esri_TextDisabledBrush}"
                                                                    FontSize="11"
                                                                    Margin="8,0,0,0"
                                                                    VerticalAlignment="Center"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>

                            <Button
                                Grid.Column="2"
                                Style="{StaticResource BrowseButtonStyle}"
                                Command="{Binding ClearSearchCommand}"
                                Height="28"
                                Width="28"
                                ToolTip="Limpiar bÃºsqueda">
                                <TextBlock Text="âœ•" FontSize="14" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" />
                            </Button>
                        </Grid>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <Button
                                Content="Seleccionar Todas"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Height="28"
                                Padding="10,4"
                                Margin="0,0,8,0"
                                Command="{Binding SelectAllFilteredCommand}"
                                ToolTip="Selecciona todas las Feature Classes visibles en la lista filtrada"/>
                            <Button
                                Content="Deseleccionar Todas"
                                Style="{StaticResource SecondaryButtonStyle}"
                                Height="28"
                                Padding="10,4"
                                Command="{Binding DeselectAllFilteredCommand}"
                                ToolTip="Deselecciona todas las Feature Classes visibles en la lista filtrada"/>
                        </StackPanel>

                        <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding FilteredFeatureClasses}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <CheckBox
                                            IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                            Content="{Binding DisplayName}"
                                            Margin="0,2"
                                            Foreground="{DynamicResource Esri_TextPrimaryBrush}"
                                            FontSize="11" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <TextBlock Style="{StaticResource DisabledTextStyle}" Margin="0,8,0,0" FontSize="10">
                            <Run Text="Mostrando "/>
                            <Run Text="{Binding FilteredFeatureClassesCount, Mode=OneWay}" FontWeight="Bold"/>
                            <Run Text=" de "/>
                            <Run Text="{Binding AvailableFeatureClasses.Count, Mode=OneWay}" FontWeight="Bold"/>
                            <Run Text=" Feature Classes"/>
                        </TextBlock>
                    </StackPanel>
                </Border>
                <!-- ===== end Feature Classes ===== -->

                <TextBlock Text="{Binding NetworksStatus}" Style="{StaticResource BodyTextStyle}" Margin="0,8,0,0" />
            </StackPanel>

            <!-- Footer panel with action buttons -->
            <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,12,0,0">
                <TextBlock Text="{Binding StatusMessage}" Style="{StaticResource BodyTextStyle}" Margin="0,0,0,8" />
                <ProgressBar Height="4" IsIndeterminate="True" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button
                        Content="Limpiar"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Margin="0,0,10,0"
                        Command="{Binding ClearFormCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
                    <Button
                        Content="Cortar"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Command="{Binding ExecuteClipCommand}"
                        IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
